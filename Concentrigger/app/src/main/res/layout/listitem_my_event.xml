<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    android:background="@drawable/my_event"

    >
    <!--第一行-->
    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concen"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryTextBlack"
            android:textStyle="bold"
            android:layout_margin="10px"/>

        <ImageView
            android:id="@+id/ic_c"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_margin="10px"
            android:src="@mipmap/bilibili"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryTextBlack"
            android:textStyle="bold"
            android:layout_margin="10px"/>

        <ImageView
            android:id="@+id/ic_t"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_margin="10px"
            android:src="@mipmap/bilibili"
            />

    </LinearLayout>

    <!--分割线-->
    <ImageView
        android:id="@+id/img_split"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginRight="10px"
        android:layout_marginLeft="10px"
        android:background="@color/lightGrey"
        android:layout_below="@id/first_row"/>

    <TextView
        android:id="@+id/txt_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_split"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginBottom="5px"
        android:textSize="20sp"
        android:text="If today is a rainy day,"
        />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_condition"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="0px"
        android:textSize="20sp"
        android:text="notify me by ring."
        />

    <Switch
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_result"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        />


</RelativeLayout>
