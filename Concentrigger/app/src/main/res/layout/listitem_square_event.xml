<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    android:background="@drawable/my_event"

    >

    <!--用户头像+名字-->
    <LinearLayout
        android:id="@+id/row_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:layout_margin="10px">

        <ImageView
            android:id="@+id/img_owner_avatar"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@mipmap/subscription"
            >

        </ImageView>

        <TextView
            android:id="@+id/txt_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="20px"
            android:textColor="@color/colorSubTextBlack"
            android:text="牙口好"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <!--分割线-->
    <ImageView
        android:id="@+id/img_split"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginRight="10px"
        android:layout_margin="10px"

        android:background="@color/lightGrey"
        android:layout_below="@id/row_userinfo"/>

    <!--第一行-->
    <LinearLayout
        android:id="@+id/content_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_split">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concen"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryTextBlack"
            android:textStyle="bold"
            android:layout_margin="10px"/>

        <ImageView
            android:id="@+id/ic_c"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_margin="10px"
            android:src="@mipmap/bilibili"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryTextBlack"
            android:textStyle="bold"
            android:layout_margin="10px"/>

        <ImageView
            android:id="@+id/ic_t"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_margin="10px"
            android:src="@mipmap/bilibili"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/txt_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_row"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginBottom="5px"
        android:textSize="20sp"
        android:text="If today is a rainy day,"
        />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_condition"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="0px"
        android:textSize="20sp"
        android:text="notify me by ring."
        />

    <!--分割线-->
    <ImageView
        android:id="@+id/img_split2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginRight="10px"
        android:layout_margin="10px"

        android:background="@color/lightGrey"
        android:layout_below="@id/txt_result"/>

    <LinearLayout
        android:id="@+id/row_control"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/img_split2"
        >

        <!--拉取数-->
        <TextView
            android:id="@+id/txt_pull_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_pull"
            />

        <!--点赞数-->
        <TextView
            android:id="@+id/txt_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_like"

            />


    </LinearLayout>


</RelativeLayout>
